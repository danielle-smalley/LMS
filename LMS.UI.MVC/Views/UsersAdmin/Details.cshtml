@model LMS.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "User Details (UsersAdmin)";
}
<div class="container">
    <br />
    <h2 class="text-center">@ViewBag.Title</h2>
    <br />
    <div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

        </dl>
    </div>
    <h4>List of roles for this user</h4>
    @if (ViewBag.RoleNames.Count == 0)
    {
        <hr />
        <p>No roles found for this user.</p>
    }

    <table class="table">

        @foreach (var item in ViewBag.RoleNames)
        {
            <tr>
                <td>
                    @item
                </td>
            </tr>
        }
    </table>
    <p class="text-center">
        <a href="@Url.Action("Index", "UsersAdmin")" class="btn btn-warning">Back to Users List</a>
    </p>

<br/>
</div>


